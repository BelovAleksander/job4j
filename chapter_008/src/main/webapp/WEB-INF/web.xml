<?xml version="1.0" encoding="ISO-8859-1" ?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
         http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>ru.job4j.servlets.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>UsersController</servlet-name>
        <servlet-class>ru.job4j.servlets.UsersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsersController</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserUpdateServlet</servlet-name>
        <servlet-class>ru.job4j.servlets.UserUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserUpdateServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserCreateServlet</servlet-name>
        <servlet-class>ru.job4j.servlets.UserCreateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserCreateServlet</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SignInController</servlet-name>
        <servlet-class>ru.job4j.servlets.SignInController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignInController</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SignOutController</servlet-name>
        <servlet-class>ru.job4j.servlets.SignOutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignOutController</servlet-name>
        <url-pattern>/signout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>JSONController</servlet-name>
        <servlet-class>ru.job4j.servlets.JSONController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JSONController</servlet-name>
        <url-pattern>/json</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>ru.job4j.logic.DBConnect</listener-class>
    </listener>
    <context-param>
        <param-name>SQLDriver</param-name>
        <param-value>org.postgresql.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:postgresql://localhost/</param-value>
    </context-param>
    <context-param>
        <param-name>user</param-name>
        <param-value>postgres</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>password</param-value>
    </context-param>
    <context-param>
        <param-name>dbName</param-name>
        <param-value>servlets_db</param-value>
    </context-param>
</web-app>
